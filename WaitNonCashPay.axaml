<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Cash8Avalon.WaitNonCashPay"
        Title="Ожидание ответа от терминала"
        Width="600"
        Height="300"
        SizeToContent="Manual"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">
    
    <StackPanel Margin="20" HorizontalAlignment="Center">
        
        <!-- Заголовок -->
        <TextBlock x:Name="MessageLabel"
                  Text="Ожидание ответа от терминала"
                  FontSize="16"
                  FontWeight="Bold"
                  TextAlignment="Center"
                  HorizontalAlignment="Center"
                  TextWrapping="Wrap"
                  Margin="0,0,0,20"/>
        
        <!-- Статус оплаты -->
        <TextBlock x:Name="StatusLabel"
                  Text="Оплата не подтверждена!"
                  FontSize="14"
                  Foreground="Red"
                  TextAlignment="Center"
                  HorizontalAlignment="Center"
                  FontWeight="Medium"
                  Margin="0,0,0,20"/>
        
        <!-- Прогресс-бар с таймером -->
        <Grid Width="500" Height="40" Margin="0,0,0,20">
            <ProgressBar x:Name="ProgressBarNonCashPay"
                        Minimum="0"
                        Maximum="80"
                        Value="80"
                        Height="30"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"/>
            
            <!-- Таймер поверх прогресс-бара -->
            <TextBlock x:Name="LabelTimer"
                      Text="80"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Текст с оставшимся временем -->
        <TextBlock Text="Осталось времени:"
                  FontSize="14"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"/>
        
        <!-- Кнопка отмены -->
        <Button x:Name="CancelButton"
               Content="Отменить"
               Width="100"
               HorizontalAlignment="Center"
               Margin="0,10,0,0"
               Click="CancelButton_Click"/>
               
    </StackPanel>
</Window>