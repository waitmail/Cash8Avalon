<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="600"            
             x:Class="Cash8Avalon.Cash_checks">
    
    <Grid Margin="10" Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Верхняя панель с кнопкой закрытия -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Левая часть: все существующие элементы управления -->
            <StackPanel Grid.Column="0" Spacing="10">
                <!-- Строка 1: Документы и кнопки -->
                <DockPanel Name="Row1Panel">
                    <!-- Это тоже TextBox, поэтому тоже исправляем -->
                    <TextBox Name="txtB_not_unloaded_docs" 
                            IsEnabled="False"
                            Text=""
                            FontSize="12"
                            Margin="0,0,10,0"
                            MinHeight="30"
                            MinWidth="500"
                            VerticalAlignment="Center"
                            Background="White"
                            Foreground="Black"/>
                    
                    <Button Name="btn_update_status_send" 
                           Content="Обновить" 
                           Width="80"
                           Margin="0,0,10,0"
                           HorizontalAlignment="Left"/>
                    
                    <Button Name="btn_check_actions" 
                           Content="ПРОВЕРКА АКЦИЙ" 
                           Width="150"
                           HorizontalAlignment="Left"/>                   
                    
                    <Image Name="pictureBox_get_update_program"
                          Width="65"
                          Height="50"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          IsVisible="False"/>
                </DockPanel>
                
                <!-- Строка 2: Фильтры -->
                <DockPanel Name="Row2Panel">
                    <!-- Левая часть: Дата -->
                    <StackPanel Orientation="Horizontal" Spacing="5" Name="DatePanel">
                        <TextBlock Text="На дату:" 
                                  VerticalAlignment="Center"/>
                        <DatePicker Name="dateTimePicker1" 
                                   Width="150"
                                   VerticalAlignment="Center"/>
                        <Button Name="fill" 
                               Content="Заполнить" 
                               Width="90"
                               VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Центр: Кассир и номер кассы -->
                    <StackPanel Orientation="Horizontal" Spacing="5" Margin="20,0,0,0" Name="CashierPanel">
                        <TextBlock Text="Кассир:" 
                                  VerticalAlignment="Center"/>
                        <!-- TextBox - поле ввода, в отключенном состоянии нужно явно задавать цвета -->
                        <TextBox Name="txtB_cashier" 
                                IsEnabled="False"
                                Width="150"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Background="White"
                                Foreground="Black"/>
                        
                        <!-- TextBlock - просто отображение текста, всегда виден нормально -->
                        <Border BorderBrush="Gray" 
                               BorderThickness="1" 
                               Padding="5"
                               CornerRadius="3"
                               Background="White"
                               MinWidth="150">
                            <TextBlock Name="num_cash" 
                                      Text="" 
                                      Foreground="Maroon"
                                      FontWeight="Bold"/>
                        </Border>
                        
                        <!-- Чекбокс оставляем в правой части -->
                        <CheckBox Name="checkBox_show_3_last_checks" 
                                 Content="3"
                                 IsChecked="True"
                                 VerticalAlignment="Center"
                                 Margin="10,0,0,0"/>
                    </StackPanel>
                </DockPanel>
            </StackPanel>
            
            <!-- Правая часть: кнопка закрытия на первом уровне -->
            <Button Grid.Column="1" 
                    Name="btnClose"
                    Content="✕" 
                    Width="30" 
                    Height="30"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0"
                    Click="CloseButton_Click"/>
        </Grid>
        
        <!-- ОБЛАСТЬ ДЛЯ ТАБЛИЦЫ -->
        <Border Grid.Row="1" 
                BorderBrush="BlueViolet" 
                BorderThickness="2"
                Margin="0,10,0,10"
                Background="White"
                Name="TableBorder">
            <!-- DataGrid будет добавлен в коде -->
        </Border>
        
        <!-- Нижняя панель с кнопкой -->
        <StackPanel Grid.Row="2" 
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0"
                   Name="BottomPanel">
            <Button Name="button1" 
                   Content="Закрыть" 
                   Width="100"
                   Height="30"
                   Click="Button1_Click"/>
        </StackPanel>
    </Grid>
</UserControl>