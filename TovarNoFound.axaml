<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Cash8Avalon.TovarNotFound"
        Title="ТОВАР НЕ НАЙДЕН !!!"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Manual"
        Width="812"
        Height="166"
        CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
    
    <Grid>
        <!-- Слой 1: Мигающий фон (только по краям) -->
        <Border x:Name="BlinkingBorder"
                Background="Yellow"
                Margin="5,5,5,5"/>
        
        <!-- Слой 2: Основной серебряный фон -->
        <Border Background="Silver"
                Margin="5,5,5,5"/>
        
        <!-- Слой 3: Контент (исходная структура) -->
        <Grid Name="MainGrid" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- TextBox с синим фоном и белым текстом -->
           <Border Grid.Row="0"
                    Background="DodgerBlue"
                    Margin="12,36,12,0"
                    Height="80"
                    CornerRadius="8"
                    BoxShadow="0 4 8 0 rgba(0,0,0,0.2)"> <!-- Тень для объема -->
    
                <TextBox Name="textBox1"
                         IsEnabled="False"
                         FontSize="48"
                         FontWeight="Bold"
                         Text="ТОВАР НЕ НАЙДЕН !!!"
                         TextAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         Foreground="White"
                         TextWrapping="Wrap"/> <!-- Перенос текста если нужно -->
            </Border>
            
            <TextBlock Grid.Row="1"
                       Name="label1"
                       Margin="12"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Foreground="DarkGreen"
                       Background="Silver"/>
        </Grid>
    </Grid>
</Window>