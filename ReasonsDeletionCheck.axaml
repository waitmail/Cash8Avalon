<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Cash8Avalon.ReasonsDeletionCheck"
        Title="Причины удаления чека"
        Width="550"
        Height="400"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen"
        CanResize="False">
    
    <!-- Стили для черной рамки при фокусе -->
    <Window.Styles>
        <!-- Убираем стандартный FocusAdorner чтобы контролировать сами -->
        <Style Selector="Button">
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>
        
        <!-- Черная рамка при ЛЮБОМ фокусе (и Tab, и Enter) -->
        <Style Selector="Button:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="0 0 0 1 #CCCCCC"/>
        </Style>
        
        <!-- Для синей кнопки "Перенести" -->
        <Style Selector="Button#btn_ok:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="0 0 0 1 #2196F3"/>
        </Style>
        
        <!-- Для красной кнопки "Отмена" -->
        <Style Selector="Button#btn_cancel:focus /template/ ContentPresenter">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BoxShadow" Value="0 0 0 1 #F44336"/>
        </Style>
    </Window.Styles>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Выберите причину удаления строки:"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <!-- Текст с выбранной причиной -->
        <TextBlock Grid.Row="1"
                   Name="txt_selected_reason"
                   Text="Причина не выбрана"
                   FontSize="16"
                   Foreground="Gray"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>
        
        <!-- ComboBox с причинами -->
        <ComboBox Grid.Row="2"
                  Name="comboBox_reasons"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,30"
                  Width="500"
                  Height="45"
                  FontSize="14.25"
                  SelectionChanged="_comboBoxReasons_SelectionChanged">
            <ComboBox.Items>
                <ComboBoxItem>Проверка акции.</ComboBoxItem>
                <ComboBoxItem>Несрабатывание акции, переоценки, уценки.</ComboBoxItem>
                <ComboBoxItem>Ошибка магазина.</ComboBoxItem>
                <ComboBoxItem>Техническая ошибка.</ComboBoxItem>
                <ComboBoxItem>Клиента не устроила цена.</ComboBoxItem>
                <ComboBoxItem>Клиенту не хватило денег.</ComboBoxItem>
                <ComboBoxItem>IT-отдел</ComboBoxItem>
                <ComboBoxItem>Иные причины.</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
        
        <!-- Кнопки -->
        <Grid Grid.Row="3"
              Width="500"
              HorizontalAlignment="Center">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Кнопка "Перенести" -->
            <Button Grid.Column="0"
                    Name="btn_ok"
                    Content="Перенести"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#2196F3"
                    BorderBrush="#1976D2"
                    Width="180"
                    Height="40"
                    CornerRadius="3"
                    Click="Btn_ok_Click"/>
            
            <!-- Кнопка "Отмена" -->
            <Button Grid.Column="2"
                    Name="btn_cancel"
                    Content="Отмена"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Background="#F44336"
                    BorderBrush="#D32F2F"
                    Width="180"
                    Height="40"
                    CornerRadius="3"
                    Click="Btn_cancel_Click"/>
        </Grid>
    </Grid>
</Window>