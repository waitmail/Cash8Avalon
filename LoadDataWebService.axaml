<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="Cash8Avalon.LoadDataWebService"
        Title="Загрузка данных"
        MinWidth="400"
        MinHeight="250"
        Width="400"
        Height="250">
    
    <Grid Margin="10">
        <StackPanel Spacing="15">
            <!-- Заголовок -->
            <TextBlock Text="Загрузка данных из системы"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            
            <!-- Информация о времени -->
            <TextBlock x:Name="timeInfoText"
                       Text="Время загрузки: 00:00"
                       FontSize="16"
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       IsVisible="False"/>
            
            <!-- Кнопка загрузки -->
            <Button x:Name="btn_new_load"
                    Content="Начать загрузку данных"
                    Height="40"
                    FontSize="14"
                    HorizontalAlignment="Center"
                    MinWidth="200"/>
            
            <!-- Панель прогресса -->
            <Border BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10"
                    Background="#F8F8F8">
                <StackPanel x:Name="progressPanel" 
                            Orientation="Vertical" 
                            Spacing="8"
                            IsVisible="False">
                    <TextBlock x:Name="statusText" 
                               FontSize="12"
                               Text="Подготовка..."
                               HorizontalAlignment="Center"/>
                    
                    <ProgressBar x:Name="progressBar1" 
                                 Height="20"
                                 Minimum="0" 
                                 Maximum="100"
                                 Value="0"
                                 IsIndeterminate="False"/>
                    
                    <!-- Убрал время отсюда, оставил только проценты -->
                    <TextBlock x:Name="progressPercent" 
                               FontSize="11"
                               Foreground="#666666"
                               Text="0%"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>