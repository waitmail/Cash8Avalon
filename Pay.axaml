<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Cash8Avalon.Pay"
        Title="Оплата"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        WindowState="Maximized"
        SystemDecorations="None">
    
    <Viewbox Stretch="Uniform">
        <Border BorderBrush="#FF007ACC" 
                BorderThickness="3"
                Background="White"
                Width="800"
                Height="600">
            
            <Grid>
                <Border Height="40"
                        Background="#FF007ACC"
                        VerticalAlignment="Top">
                    
                    <TextBlock Text="Оплата"
                              Foreground="White"
                              FontSize="14"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="15,0,0,0"/>
                </Border>
                
                <Grid Margin="0,40,0,0">
                    <Grid Background="{DynamicResource SystemControlBackgroundBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock x:Name="label4" 
                                  Grid.Row="0" Grid.Column="1"
                                  Text="Бонусы по документу"
                                  FontSize="27.75"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,10,0,10"
                                  IsVisible="False"/>
                                  
                        <TextBox x:Name="bonus_on_document"
                                Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="3"
                                FontSize="39.75"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                Foreground="Green"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="319"
                                Height="55"
                                Margin="0,10,0,10"
                                IsReadOnly="True"
                                TextAlignment="Right"
                                IsVisible="False"/>
                        
                        <TextBlock x:Name="label5" 
                                  Grid.Row="1" Grid.Column="1"
                                  Text="Бонусов всего"
                                  FontSize="27.75"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,10,0,10"
                                  IsVisible="False"/>
                                  
                        <TextBox x:Name="bonus_total_in_centr"
                                Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3"
                                FontSize="39.75"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                Foreground="Green"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="320"
                                Height="55"
                                Margin="0,10,0,10"
                                IsReadOnly="True"
                                TextAlignment="Right"
                                IsVisible="False"/>
                        
                        <TextBlock x:Name="label1" 
                                  Grid.Row="3" Grid.Column="1"
                                  Text="СУММА ЧЕКА"
                                  FontSize="27.75"
                                  FontWeight="Bold"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,20,0,20"/>
                                  
                        <TextBox x:Name="pay_sum" x:FieldModifier="public"
                                Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="3"
                                FontSize="39.75"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                Foreground="Black"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="320"
                                Height="55"
                                Margin="0,20,0,20"
                                IsReadOnly="True"
                                TextAlignment="Right"/>
                        
                        <TextBlock x:Name="label6" 
                                  Grid.Row="4" Grid.Column="1"
                                  Text="БОНУСЫ"
                                  FontSize="27.75"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,15,0,15"
                                  IsVisible="False"/>
                                  
                        <Grid Grid.Row="4" Grid.Column="5" Grid.ColumnSpan="4"
                              IsVisible="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="pay_bonus"
                                    x:FieldModifier="public"
                                    Grid.Column="0"
                                    FontSize="32.25"
                                    Background="{DynamicResource SystemControlDarkBrush}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Width="180"
                                    Height="56"
                                    Margin="0,15,10,15"
                                    IsEnabled="False"
                                    TextAlignment="Right"/>
                                    
                            <TextBox x:Name="pay_bonus_many"
                                    x:FieldModifier="public"
                                    Grid.Column="2"
                                    FontSize="32.25"
                                    Background="{DynamicResource SystemControlDarkBrush}"
                                    Foreground="Blue"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Width="135"
                                    Height="49"
                                    Margin="0,15,0,15"
                                    IsEnabled="False"
                                    TextAlignment="Right"/>
                        </Grid>
                        
                        <TextBlock x:Name="label7" 
                                  Grid.Row="5" Grid.Column="1"
                                  Text="СЕРТИФИКАТЫ"
                                  FontSize="27.75"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,15,0,15"/>
                                  
                        <TextBox x:Name="sertificates_sum"
                                Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="3"
                                FontSize="39.75"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                Foreground="Green"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="320"
                                Height="55"
                                Margin="0,15,0,15"
                                IsReadOnly="True"
                                TextAlignment="Right"/>
                        
                        <TextBlock x:Name="label8" 
                                  Grid.Row="6" Grid.Column="1"
                                  Text="КАРТА ОПЛАТЫ"
                                  FontSize="24"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,15,0,15"/>
                        
                        <CheckBox x:Name="checkBox_payment_by_sbp"
                                 Grid.Row="6" Grid.Column="3"
                                 Content="СБП"
                                 FontSize="21.75"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 Width="96"
                                 Height="43"
                                 IsVisible="True"/>
                        
                        <TextBox x:Name="non_cash_sum"
                                Grid.Row="6" Grid.Column="5"
                                FontSize="32.25"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Width="243"
                                Height="56"
                                Margin="0,15,0,15"
                                TextAlignment="Right"/>
                                
                        <TextBlock x:Name="label9" 
                                  Grid.Row="6" Grid.Column="6"
                                  Text=","
                                  FontSize="26.25"
                                  VerticalAlignment="Bottom"
                                  HorizontalAlignment="Center"
                                  Margin="5,0,5,10"
                                  Height="56"/>
                                  
                        <TextBox x:Name="non_cash_sum_kop"
                                Grid.Row="6" Grid.Column="7"
                                FontSize="32.25"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Width="54"
                                Height="56"
                                Margin="0,15,0,15"
                                IsEnabled="False"
                                TextAlignment="Right"
                                Text="0"/>
                                
                        <CheckBox x:Name="checkBox_do_not_send_payment_to_the_terminal"
                                 Grid.Row="6" Grid.Column="8"
                                 Content="?"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="10,15,0,15"
                                 Width="32"
                                 Height="17"
                                 IsVisible="True"/>
                        
                        <TextBlock x:Name="label2" 
                                  Grid.Row="8" Grid.Column="1"
                                  Text="НАЛИЧНЫЕ"
                                  FontSize="27.75"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,20,0,20"/>
                                  
                        <TextBox x:Name="txtB_cash_sum"
                                Grid.Row="8" Grid.Column="5" Grid.ColumnSpan="3"
                                FontSize="32.25"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="319"
                                Height="56"
                                Margin="0,20,0,20"
                                TextAlignment="Right"/>
                        
                        <TextBlock x:Name="label3" 
                                  Grid.Row="9" Grid.Column="1"
                                  Text="СДАЧА"
                                  FontSize="27.75"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Left"
                                  Margin="0,15,0,15"/>
                                  
                        <TextBox x:Name="remainder"
                                Grid.Row="9" Grid.Column="5" Grid.ColumnSpan="3"
                                FontSize="32.25"
                                Background="{DynamicResource SystemControlDarkBrush}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Width="319"
                                Height="56"
                                Margin="0,15,0,15"
                                TextAlignment="Right"
                                Padding="0,0,10,0"/>
                        
                        <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="10"
                              Background="{DynamicResource SystemControlBackgroundBrush}"
                              Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button x:Name="button1"
                                   Grid.Column="1"
                                   Content="Вернуться в документ (F5)"
                                   FontSize="18"
                                   Background="LightGray"
                                   Foreground="Black"
                                   BorderBrush="DarkGray"
                                   BorderThickness="1"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Width="320" 
                                   Height="60"
                                   HorizontalAlignment="Left"/>
                                   
                            <Button x:Name="button_pay"
                                   Grid.Column="3"
                                   Content="Подтвердить оплату (F12)"
                                   FontSize="18"
                                   Background="LightGray"
                                   Foreground="Red"
                                   BorderBrush="DarkGray"
                                   BorderThickness="1"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Width="320" 
                                   Height="60"
                                   HorizontalAlignment="Left"/>
                        </Grid>
                        
                        <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="10"
                                  Height="1" 
                                  Fill="LightGray" 
                                  Margin="40,0,40,0"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</Window>